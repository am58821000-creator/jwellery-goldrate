<script>
    function updatePrices() {
        // محاكاة سعر الذهب (يمكنك ربطه بـ API لاحقاً)
        const basePrice = 25.450; // سعر افتراضي بالدينار
        const prices = {
            k24: (basePrice).toFixed(3),
            k22: (basePrice * 0.916).toFixed(3),
            k21: (basePrice * 0.875).toFixed(3),
            k18: (basePrice * 0.750).toFixed(3)
        };

        for (let key in prices) {
            const el = document.getElementById(key);
            el.innerText = prices[key] + " د.ك";
            // إضافة تأثير بصري عند التحديث
            el.parentElement.classList.add('update-flash');
            setTimeout(() => el.parentElement.classList.remove('update-flash'), 1000);
        }
    }

    // التحديث كل 10 ثواني
    setInterval(updatePrices, 10000);
    updatePrices(); // أول تحديث عند التحميل
</script>

