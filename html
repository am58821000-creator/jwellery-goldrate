<body>

<div class="calculator-section">
    <h3>حاسبة Jawhara للذهب</h3>
    <p style="font-size: 0.8rem; color: #666;">السعر يعتمد على تحديث السوق الحالي</p>
    
    <input type="number" id="weight" placeholder="أدخل الوزن بالجرام">
    
    <select id="karat-select">
        <option value="24">عيار 24</option>
        <option value="22">عيار 22</option>
        <option value="21">عيار 21</option>
        <option value="18">عيار 18</option>
    </select>
    
    <button onclick="calculateTotal()">احسب القيمة الإجمالية</button>
    
    <div class="result-box" id="total-result">
        الإجمالي: 0.000 د.ك
    </div>
</div>

<script>
    // هذه الدالة تأخذ السعر من شاشة الأسعار التي صممناها سابقاً
    function calculateTotal() {
        const weight = document.getElementById('weight').value;
        const karat = document.getElementById('karat-select').value;
        let pricePerGram = 0;

        // جلب السعر بناءً على العيار (يفضل ربطه بالأسعار المباشرة)
        // هنا مثال تقديري بناءً على سعر عيار 24 المفترض (مثلاً 25 دينار)
        const basePrice = 25.450; 
        
        if(karat == "24") pricePerGram = basePrice;
        else if(karat == "22") pricePerGram = basePrice * 0.916;
        else if(karat == "21") pricePerGram = basePrice * 0.875;
        else if(karat == "18") pricePerGram = basePrice * 0.750;

        const total = weight * pricePerGram;
        document.getElementById('total-result').innerText = "الإجمالي: " + total.toFixed(3) + " د.ك";
    }
</script>

</body>
